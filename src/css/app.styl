$elementSpacing = 40px

hanzo-product
  .form-1, .form-2
    .form-part
      .form-section
        column 1/2 2 $elementSpacing

  .two-inputs > *
    column 1/2 2 ($elementSpacing / 2)

  .three-inputs > *
    column 1/3 3 ($elementSpacing / 2)

  .quarter-quarter-half-inputs
    & > *:not(:last-child)
      column 1/4 3 ($elementSpacing / 2)
    & > *:last-child
      column 1/2 3 ($elementSpacing / 2)

  .dimensions
    .input
      position: relative
      &:not(:last-child):after
        content: 'x'
        display: block
        position: absolute
        right: -.9em
        bottom: -.3em

hanzo-products
  .table-row
    cursor: pointer
  .table-cell
    &.img
      max-width: 100px
      padding: 20px


